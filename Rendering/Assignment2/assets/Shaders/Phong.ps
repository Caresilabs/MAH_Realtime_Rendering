
struct PSIn
{
	float4 Pos  : SV_Position;
	float3 Normal : NORMAL;
	float2 TexCoord : TEX;
	float3 LightDir : LIGHTDIR;
	float3 ViewDir : VIEWDIR;
};

//-----------------------------------------------------------------------------------------
// PixelShader: PSSceneMain
//-----------------------------------------------------------------------------------------
float4 PS_main(PSIn input) : SV_Target
{	

	float4 ambient = float4(0.3, 0.1, 0.1, 1);
	float4 diffuse = max(0, dot(input.Normal, input.LightDir)) * float4(0, 1, 0, 1);

	float specPow = 10.0;
	float4 specular = pow( max(0, dot(reflect(input.LightDir, input.Normal), input.ViewDir)), specPow) * float4(0.6, 0.6, 0.6, 1);

	return ambient + diffuse + specular ;
}